<idea-plugin>
  <id>io.redgreen.timelapse.dev</id>
  <name>Timelapse Dev</name>
  <version>0.0.3-dev</version>
  <vendor email="ragunath@redgreen.io" url="https://redgreen.io">Red Green, Inc.</vendor>
  <depends>com.intellij.modules.platform</depends>

  <description><![CDATA[
    Dev tooling for Red Green's Timelapse project
  ]]></description>

  <change-notes><![CDATA[
    <ul>
      <li>Add an "Approve File" action to Project View popup menu.</li>
      <li>XD live template for identifier.</li>
      <li>Templates for XD HTML tags.</li>
    </ul>
  ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="201"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
     on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <defaultLiveTemplatesProvider implementation="io.redgreen.timelapse.dev.templates.XdLiveTemplatesProvider"/>
    <liveTemplateContext implementation="io.redgreen.timelapse.dev.templates.TimelapseDevTemplateContextType"/>
  </extensions>

  <actions>
    <group id="io.redgreen.timelapse.dev.ApprovalTests">
      <separator/>
      <action id="io.redgreen.timelapse.dev.actions.CompareWithAction"
              class="io.redgreen.timelapse.dev.actions.CompareWithAction" text="Compare with">
        <add-to-group group-id="ProjectViewPopupMenu"/>
      </action>
      <action id="io.redgreen.timelapse.dev.actions.ApproveAction"
              class="io.redgreen.timelapse.dev.actions.ApproveAction" text="Approve File"
              description="Promotes a received.* file to approved.*">
        <add-to-group group-id="ProjectViewPopupMenu"/>
      </action>
    </group>
  </actions>
</idea-plugin>
